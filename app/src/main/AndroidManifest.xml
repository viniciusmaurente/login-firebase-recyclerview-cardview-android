<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.app4all">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App4all">
        <activity android:name=".ViewActivity"></activity>
        <activity android:name=".HomeActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AddEventoActivity" />
        <activity android:name=".EditarPerfilActivity" />
        <activity android:name=".CadastroActivity" />
        <activity android:name=".MainActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>